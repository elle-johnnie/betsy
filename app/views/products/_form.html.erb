<%= render partial: "layouts/form_errors", locals: { error_hash: @product } %>

<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :prod_name %>
    <%= form.text_field :prod_name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :inv_qty %>
    <%= form.number_field :inv_qty, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :categories %>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :category) %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary"  %>
  </div>
<% end %>
